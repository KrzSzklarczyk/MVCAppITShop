@using MVCAppSklep.Models.ModeleWidoki;
@model KoszykViewModel

<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Order Summary
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-danger btn-sm">Back to Cart</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Shipping Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Name</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.Imie" class="form-control" />
									<span asp-validation-for="Zamowienie.Imie" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>LastName</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.Nazwisko" class="form-control" />
									<span asp-validation-for="Zamowienie.Nazwisko" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Adres</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.Adres" class="form-control" />
									<span asp-validation-for="Zamowienie.Adres" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Miasto</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.Miasto" class="form-control" />
									<span asp-validation-for="Zamowienie.Miasto" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>KodPocztowy</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.KodPocztowy" class="form-control" />
									<span asp-validation-for="Zamowienie.KodPocztowy" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Kraj</label>
								</div>
								<div class="col-9">
									<input asp-for="Zamowienie.Kraj" class="form-control" />
									<span asp-validation-for="Zamowienie.Kraj" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var details in Model.ListaKoszykow){
								<li class="list-group-item d-flex justify-content-between">
									<div>
											<h6 class="my-0">@details.Produkt.Nazwa</h6>
											<small class="text-muted">Ilość: @details.ZamowionaIlosc</small>
									</div>
									<span class="text-muted">@((details.Price*details.ZamowionaIlosc).ToString("c")) </span>
								</li>
								}

								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total (PLN)</small>
									<strong class="text-info">@Model.Zamowienie.CenaCalkowita.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">
							Estimate Arrival Date:
							@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>